<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_investing_tab"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/container_capsule_shape">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/height_investing_tab"
		android:layout_margin="@dimen/margin_extra_short_plus"
		android:background="@drawable/back_tabs">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tabInvestingSelectedTab"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text=""
				android:background="@drawable/back_select"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text=""/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tabInvestingTab1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="Portfolio"
				android:textColor="@color/white"
				android:gravity="center"/>

			<TextView
				android:id="@+id/tabInvestingTab2"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="Pending"
				android:textColor="@color/gray_text_color"
				android:gravity="center"/>
		</LinearLayout>
	</FrameLayout>
</LinearLayout>